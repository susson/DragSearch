{
  "manifest_version": 3,
  "name": "拖拽搜索",
  "version": "0.1",
  "description": "监听用户拖拽操作并搜索划词内容",
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "search"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/main.js"]
    }
  ]
}
